generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  email          String      @unique @db.VarChar(255)
  name           String?     @db.VarChar(100)
  passwordHash   String?     @db.VarChar(255)
  deletedAt      DateTime?
  profilePicture String?     @db.VarChar(500)
  shares         ListShare[]
  lists          ToDoList[]

  @@index([email])
}

model ToDoList {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  name      String      @db.VarChar(255)
  ownerId   Int
  order     Int         @default(autoincrement())
  deletedAt DateTime?
  type      ListType    @default(CUSTOM)
  shares    ListShare[]
  tasks     Task[]  
  owner     User        @relation(fields: [ownerId], references: [id])
}

model ListShare {
  id           Int      @id @default(autoincrement())
  sharedWithId Int
  toDoListId   Int
  sharedWith   User     @relation(fields: [sharedWithId], references: [id])
  toDoList     ToDoList @relation(fields: [toDoListId], references: [id])

  @@unique([sharedWithId, toDoListId])
}

model Task {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  description        String    @db.VarChar(255)
  completed          Boolean   @default(false)
  todoListId         Int
  order              Int       @default(autoincrement())
  deletedAt          DateTime?
  dueDate            DateTime?
  reminderDaysBefore Int       @default(1)
  specificDayOfWeek  Int?
  steps              Step[]
  todoList           ToDoList  @relation(fields: [todoListId], references: [id])
}

model Step {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  description String
  completed   Boolean   @default(false)
  taskId      Int
  order       Int       @default(autoincrement())
  deletedAt   DateTime?
  task        Task      @relation(fields: [taskId], references: [id])
}

enum ListType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
  CUSTOM
}
