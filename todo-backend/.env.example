# Required
DATABASE_URL=postgresql://user:password@localhost:5432/tasks_db

# Optional
PORT=3000
NODE_ENV=development

# Production: comma-separated frontend URLs for CORS (e.g. https://app.example.com)
# ALLOWED_ORIGINS=

# Optional: Sentry DSN for error reporting (leave unset to disable)
# SENTRY_DSN=

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-username
SMTP_PASSWORD=your-password
SMTP_FROM='"Horizon Tasks" <no-reply@yourdomain.com>'

# Redis (for Background Jobs)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cloudinary Storage (for Profile Pictures)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
