{
  "expo": {
    "name": "Horizon Flux",
    "slug": "tasks-management",
    "scheme": "tasks-management",
    "version": "1.2.1",
    "description": "Organize your life with Horizon Flux by Horizon Labs - the intuitive to-do list app that helps you stay on top of your daily, weekly, monthly, and yearly tasks. Create custom lists, set reminders, track sub-tasks, and share lists with others. Available in English and Hebrew.",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tasksmanagement.app",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This app uses tracking to provide personalized reminders and improve your experience."
      }
    },
    "android": {
      "package": "com.tasksmanagement.app",
      "versionCode": 3,
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["RECEIVE_BOOT_COMPLETED", "VIBRATE", "POST_NOTIFICATIONS"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.tasksmanagement.app"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ],
      "@sentry/react-native",
      "expo-asset"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "0de79825-1286-462f-8d34-1997071e86d7"
      }
    }
  }
}
